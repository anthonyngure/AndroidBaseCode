<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ke.co.toshngure.androidbasecode.activity.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/fullModelListFragmentSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Full Model List Fragment" />

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/bottomSheetModelListFragmentSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Bottom Sheet Model List Fragment" />


        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/modelFragmentSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Model Fragment" />

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/networkImageSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Network Image" />

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/dialogSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Default Base Dialog" />

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/customMessageDialogSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Custom Message Base Dialog" />

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/drawableUtilsSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Drawable Utils" />

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/prefUtilsImplSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="PrefUtilsImpl Utils" />

        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/imagePickerSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Image Picker Test" />


        <ke.co.toshngure.views.SimpleListItemView
            android:id="@+id/connectionHandlerSLIV"
            style="@style/TestSimpleListItemView"
            app:sliTitle="Test Connection Handler" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
