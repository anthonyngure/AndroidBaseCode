<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BaseApp.LinearLayout"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/list_row_padding">

    <ke.co.toshngure.views.NetworkImage
        android:id="@+id/avatarNI"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        app:niBackground="@color/colorAccent"
        app:niCircled="true" />

    <LinearLayout style="@style/BaseApp.LinearLayout.Vertical">

        <TextView
            android:id="@+id/nameTV"
            style="@style/BaseApp.Heading" />


        <TextView
            android:id="@+id/usernameTV"
            style="@style/BaseApp.Body" />

        <TextView
            android:id="@+id/emailTV"
            style="@style/BaseApp.Body" />

    </LinearLayout>

</LinearLayout>